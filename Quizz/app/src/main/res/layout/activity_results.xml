<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.myapp.vaibhav.quizz.ResultsActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/activity_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/percentText"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="20dp"
            android:id="@+id/messageText"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|italic"
            android:textAlignment="center"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="19dp"
            android:id="@+id/scoreText"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scoreText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:id="@+id/percentText"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <Button
            android:text="Share Result"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageText"
            android:layout_centerHorizontal="true"
            android:id="@+id/button6"
            android:drawableLeft="@android:drawable/ic_menu_share"
            android:layout_width="180dp"
            android:onClick="shareResultMeth"
            android:background="@color/componentColor"
            android:textColor="@android:color/background_light"
            android:padding="5dp"
            android:layout_marginTop="50dp" />

        <Button
            android:text="Home"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button6"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignStart="@+id/button6"
            android:id="@+id/button7"
            android:drawableLeft="@drawable/home"
            android:layout_width="180dp"
            android:onClick="homeMeth"
            android:background="@color/componentColor"
            android:textColor="@android:color/background_light"
            android:padding="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button7"
            android:layout_marginTop="70dp"
            android:id="@+id/advtText" />

    </RelativeLayout>
</ScrollView>