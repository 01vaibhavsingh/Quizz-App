<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myapp.vaibhav.quizz.CategoriesActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/componentColor"
            android:onClick="cQuizMeth"
            android:text="C Language"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/cppButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbutton"
            android:layout_marginTop="5dp"
            android:background="@color/componentColor"
            android:onClick="cppQuizMeth"
            android:text="C++"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/javaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cppButton"
            android:layout_marginTop="5dp"
            android:background="@color/componentColor"
            android:onClick="javaQuizMeth"
            android:text="Java "
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/pythonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/javaButton"
            android:layout_marginTop="5dp"
            android:background="@color/componentColor"
            android:onClick="pythonQuizMeth"
            android:text="Python"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/htmlButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pythonButton"
            android:layout_marginTop="5dp"
            android:background="@color/componentColor"
            android:onClick="htmlQuizMeth"
            android:text="HTML"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/androidButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/htmlButton"
            android:layout_marginTop="5dp"
            android:background="@color/componentColor"
            android:onClick="androidQuizMeth"
            android:text="Android"
            android:textColor="@android:color/background_light" />

    </RelativeLayout>
</ScrollView>
